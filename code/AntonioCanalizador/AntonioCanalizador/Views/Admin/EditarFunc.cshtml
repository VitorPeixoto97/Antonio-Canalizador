@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Editar Funcionário";
}

<div>
    <div style="width:100%; margin-top: 50px; background-color: #293C4A;">
        <div style="width:99%; padding-left:15.5%;background-color: #293C4A;">
            <div class="firstrow">
                <div class="col-lg-4" style="margin-top:20px;">
                    @{ using (Html.BeginForm("SaveFunc", "Admin", FormMethod.Post))
                        {
                            @Html.ValidationSummary(true)
                            <h3><span class="title" style="color:#E69335; font-size:3vh;">@Model.nome</span></h3>
                            <h3><span class="label">Telemóvel </span></h3>
                            <input type="text" pattern="[9]{1}[0-9]{8}" value='@Model.telemovel' style="font-size:1rem; overflow:auto;  width:10vw;" name="telemovel" id="telemovel" required />
                            <footer>.</footer>
                            <h3><span class="label">Turno </span></h3>
                            <input type="tel" list="turno" pattern="[1-3]{1}" value='@Model.turno' style="font-size:1rem; float:left; background-color:#192C3A; color:#FFFFFF; width:10%;" name="turno">
                            <datalist id="turno">
                                <option value="1">
                                <option value="2">
                                <option value="3">
                            </datalist>
                            <h3><span class="label" style="color:#192C3A;">. </span></h3>
                            <input type="text" name="id_funcionario" value="@Model.id_funcionario" required hidden />
                            <h2><span class="label" style="color:#192C3A;">. </span></h2>
                            <input type="submit" value="GUARDAR" class="btn btn-primary btn-lg" />
                            <h3><span class="label" style="color:#192C3A;">. </span></h3>

                        }
                    }
                </div>


                <div class="col-lg-2" style="margin-top:-20px;">
                    <a href='@Url.Action("VerFuncs", "Admin")'>
                        <img src="https://i.imgur.com/fVAgrFb.png" style="margin-left:4px; margin-top:40px; width:150px; height:auto;" />
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>



