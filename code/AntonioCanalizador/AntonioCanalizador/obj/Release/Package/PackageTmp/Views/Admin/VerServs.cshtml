@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Serviços";
}

<div>
    <div style="width:100%; margin-top: 50px; background-color: #293C4A;">
        <div class="lineseparator">SERVIÇOS </div>
        <a href='@Url.Action("Home", "Admin")'>
            <img src="https://i.imgur.com/fVAgrFb.png" style="position:absolute; margin-left:77%; margin-top:-57px; width:150px; height:auto;" />
        </a>

        <div style="width:99%; padding-left:15.5%;background-color: #293C4A;">


            @{ if (@Model.Count == 0)
                {
                    <div class="lineseparator" style="background-color:#293C4A; font-size:25px; margin-left:-8.5%;">Sem serviços</div>
                }
                else
                {
                    <div class="firstrow">
                        <div class="col-lg-10" style="background-color:#293C4A; margin-bottom:20px; padding-bottom:20px;">
                            <div style="width:100%; display:table; background-color:#E69335;">
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:50px; background-color:#e69335; float:left;"> ID</div>
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:350px; background-color:#e69335; float:left;"> NOME</div>
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:80px; background-color:#e69335; float:left;"> 24/7</div>
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:80px; background-color:#e69335; float:left;"> PNP</div>
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:80px; background-color:#e69335; float:left;"> PNR</div>
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:80px; background-color:#e69335; float:left;"> PEP</div>
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:80px; background-color:#e69335; float:left;"> PER</div>
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:100px; background-color:#e69335; float:left;"> DUR.</div>
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:150px; background-color:#e69335; float:left;"> EDITAR</div>
                                <div class="preco" style="font-family:'San Francisco Bold'; font-size:25px; height:50px; width:160px; background-color:#e69335; float:left;"> REMOVER</div>
                            </div>
                            @{ for (int i = 0; i < Model.Count; i++)
                                {

                                    if (i % 2 == 0)
                                    {
                                        <div style="width:100%; background-color:#293C4A; display:table;">
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:50px; float:left; background-color:#293C4A;"> @Model[i].id_servico</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:350px; float:left; background-color:#293C4A;"> @Model[i].nome</div>
                                            @{if (Model[i].disponibilidade == 1)
                                                { <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#293C4A;">Sim</div>
                                                }
                                                else
                                                { <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#293C4A;">Não</div>
                                                }}
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#293C4A;"> @Model[i].preco_normal_p €</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#293C4A;"> @Model[i].preco_normal_r €</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#293C4A;"> @Model[i].preco_extra_p €</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#293C4A;"> @Model[i].preco_extra_r €</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:100px; float:left; background-color:#293C4A;"> @Model[i].duracaoprevista h</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:150px; float:left; background-color:#293C4A;"> <a href='@Url.Action("EditarServ", "Admin", new { id = Model[i].id_servico})'><span style="color:#FFFFFF">Editar</span></a></div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:160px; float:left; background-color:#293C4A;"> <a href='@Url.Action("RemoveServ", "Admin", new { id = Model[i].id_servico})'><span style="color:#ff5b6a">Remover</span></a></div>
                                        </div>
                                    }
                                    else
                                    {
                                        <div style="width:100%; background-color:#192C3A; display:table;">
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:50px; float:left; background-color:#192C3A;"> @Model[i].id_servico</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:350px; float:left; background-color:#192C3A;"> @Model[i].nome</div>
                                            @{if (Model[i].disponibilidade == 1)
                                                { <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#192C3A;">Sim</div>
                                                }
                                                else
                                                { <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#192C3A;">Não</div>
                                                }}
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#192C3A;"> @Model[i].preco_normal_p €</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#192C3A;"> @Model[i].preco_normal_r €</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#192C3A;"> @Model[i].preco_extra_p €</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:80px; float:left; background-color:#192C3A;"> @Model[i].preco_extra_r €</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:100px; float:left; background-color:#192C3A;"> @Model[i].duracaoprevista h</div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:150px; float:left; background-color:#192C3A;"> <a href='@Url.Action("EditarServ", "Admin", new { id = Model[i].id_servico})'><span style="color:#FFFFFF">Editar</span></a></div>
                                            <div class="preco" style="font-family:'San Francisco Bold'; font-size:20px; height:50px; width:160px; float:left; background-color:#192C3A;"> <a href='@Url.Action("RemoveServ", "Admin", new { id = Model[i].id_servico})'><span style="color:#ff5b6a">Remover</span></a></div>
                                        </div>
                                    }
                                }
                            }
                        </div>
                    </div>
                }
            }
            <h3><span class="label" style="font-family:'San Francisco Bold';">LEGENDA:</span></h3>
            <h3><span class="label" style="font-size:1.8vh;">PNP: Preço em horário normal na 1ª hora </span></h3>
            <h3><span class="label" style="font-size:1.8vh;">PNP: Preço em horário normal nas restantes horas </span></h3>
            <h3><span class="label" style="font-size:1.8vh;">PNP: Preço em horário extra na 1ª hora </span></h3>
            <h3><span class="label" style="font-size:1.8vh;">PNP: Preço em horário extra nas restantes horas </span></h3>
            <h3><span class="label" style="font-size:1.8vh;">DUR: Duração prevista </span></h3>
            <h3><span class="label" style="color:#192C3A;">. </span></h3>
        </div>
    </div>
</div>

