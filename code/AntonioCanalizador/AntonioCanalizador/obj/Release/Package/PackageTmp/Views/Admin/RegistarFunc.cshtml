@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Registar funcionário";
}
<div>
    <div style="width:100%; margin-top: 50px; background-color: #293C4A;">
        <div style="width:99%; padding-left:15%;background-color: #293C4A;">


            @if (Request.IsAuthenticated && User.Identity.Name == "admin")
            {
                using (Html.BeginForm("RegFunc", "Admin", FormMethod.Post))
                {
                    @Html.ValidationSummary(true)
            <div class="firstrow">
                <div class="col-lg-6">
                    <h3><span class="label">Nome completo</span></h3>
                    <input type="text" style="font-size:1.6rem; width:34vw;" name="nome" id="nome" required />

                    <div class="firstrow">

                        <div class="col-lg-4">
                            <input type="text" style="font-size:1.6rem;width:15vw;" name="ativo" id="ativo" value="1" hidden required />

                            <h3><span class="label">Turno</span></h3>
                            <input type="text" pattern="[1-3]{1}" style="font-size:1.6rem;width:15vw;" name="turno" id="turno" required />

                            <h3><span class="label">Palavra-passe</span></h3>
                            <input type="text" style="background-color:#192C3A;width:15vw;" name="password" id="password" required />

                            <h3><span class="label">Telemóvel</span></h3>
                            <input type="text" style="background-color:#192C3A;width:15vw;" pattern="[9]{1}[0-9]{8}" name="telemovel" id="telemovel" required />
                        </div>


                    </div>

                    <input type="submit" value="REGISTAR" style="margin-top:20px; margin-bottom:20px;" class="btn btn-primary btn-lg" />

                </div>
                <div class="col-lg-2" style="margin-top:0px;">
                    <a href='@Url.Action("Home", "Admin")'>
                        <img src="https://i.imgur.com/fVAgrFb.png" style="margin-left:4px; margin-top:40px; width:150px; height:auto;" />
                    </a>
                </div>
            </div>
                }
            }
            else
            {
                @Url.Action("Index", "MyProfile")
            }
        </div>
    </div>
</div>