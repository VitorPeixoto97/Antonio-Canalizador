@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    ViewBag.Title = "Autenticação";
}

<div>
    <div style="width:100%; margin-top: 50px; background-color: #293C4A;">
        <div style="width:99%; padding-left:15%;background-color: #293C4A;">
            <div class="firstrow" style="padding-left: 17%; padding-right:5%">
                <div class="col-lg-4">
                    <h3><span class="title_alt_left">VANTAGENS DE SE REGISTAR</span></h3>
                    <h3><span class="text-normal" style="color:#FFFFFF; font-size:2vmin;">> Agendamento imediato</span></h3>
                    <h3><span class="text-normal" style="color:#FFFFFF; font-size:2vmin;">> Disponibilidade 24/7</span></h3>
                    <h3><span class="text-normal" style="color:#FFFFFF; font-size:2vmin;">> Notificações via SMS e email</span></h3>
                    <h3><span class="text-normal" style="color:#FFFFFF; font-size:2vmin;">> Avaliação do técnico</span></h3>
                    <h3><span class="text-normal" style="color:#FFFFFF; font-size:2vmin;">> Orçamento automático</span></h3>
                </div>

                @if (!Request.IsAuthenticated)
                {
                    using (Html.BeginForm("Login", "Login", FormMethod.Post))
                    {
                        @Html.ValidationSummary(false)
                <div class="col-lg-12" padding-right="40px">
                    <fieldset>
                        <h3><span class="label">Email</span></h3>
                        <h3><input type="login" name="email" required /></h3>
                        <h3><span class="label">Palavra-passe</span></h3>
                        <h3><input type="password" name="password" required /></h3>
                        <a><span class="label">Não tem conta? Registe-se </span></a>
                        <a href='@Url.Action("Registar", "Login")'><span class="label">aqui!</span></a>
                    </fieldset>
                    <h3><input class="btn btn-lg btn-primary" style="margin-top:20px;" type="submit" value="Entrar" /></h3>
                    <h3><span class="label" style="color:#192C3A;">. </span></h3>
                </div>
                    }
                }
                else
                {
                    @Url.Action("Index", "MyProfile")
                }
            </div>
        </div>
    </div>
</div>
